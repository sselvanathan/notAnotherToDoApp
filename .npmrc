# Use strict-peer-dependencies to ensure all peer dependencies are installed correctly
strict-peer-dependencies=true

# Use node-linker=hoisted for better compatibility
node-linker=hoisted

# Save exact versions by default
save-exact=true

# Don't generate a lockfile when running `pnpm install`
lockfile=true

# Use the workspace protocol for better monorepo support
prefer-workspace-packages=true

# Use the public npm registry
registry=https://registry.npmjs.org/